<!--        android:layout_height="wrap_content"-->
<!--        android:layout_gravity="end|bottom"-->
<!--        android:src="@drawable/common_google_signin_btn_icon_light"-->
<!--        android:layout_margin="20dp"/>-->
</androidx.drawerlayout.widget.DrawerLayout>
